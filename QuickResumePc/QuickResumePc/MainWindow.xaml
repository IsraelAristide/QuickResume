<Window
    x:Class="QuickResumePc.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:QuickResumePc"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" x:Name="ViewPort">

    <StackPanel Loaded="StackPanel_Loaded" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Button Name="Refresh" Click="Refresh_Click">Refresh</Button>
        <ComboBox Name="ProcList" SelectionChanged="ProcList_SelectionChanged" ></ComboBox>
        <Button Name="Suspend" Click="Suspend_Click" Visibility="Collapsed">Suspend</Button>
        <Button Name="Resume" Click="Resume_Click" Visibility="Collapsed">Resume</Button>
    </StackPanel>
 
</Window>
